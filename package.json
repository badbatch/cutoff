{
  "name": "cutoff",
  "type": "module",
  "version": "0.2.8",
  "description": "An opinionated command line utility for cutting releases and publishing to npm.",
  "homepage": "https://github.com/badbatch/cutoff",
  "engines": {
    "node": "^18.13.0"
  },
  "bugs": {
    "url": "https://github.com/badbatch/cutoff/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/badbatch/cutoff"
  },
  "license": "MIT",
  "author": "Dylan Aubrey",
  "exports": {
    "default": "./src/index.ts",
    "types": "./src/index.ts"
  },
  "bin": {
    "cutoff": "./bin/cutoff.mjs"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      "default": "./dist/main/index.mjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm run clean:dist && pnpm run compile",
    "changelog": "changelog",
    "clean:deps": "del-cli ./node_modules",
    "clean:dist": "del-cli ./dist",
    "commit": "commit",
    "compile": "concurrently npm:compile:*",
    "compile:main": "rollup -c ./rollup.config.cjs",
    "compile:types": "tsc --declaration --declarationMap --emitDeclarationOnly",
    "cutoff": "node --trace-warnings ./bin/cutoff.mjs cut",
    "cutoff:post-version": "pnpm run compile",
    "lint": "eslint . --ext .ts,.cjs",
    "publish": "node --trace-warnings ./bin/cutoff.mjs publish",
    "test": "jest --logHeapUsage",
    "type-check": "tsc --noEmit",
    "validate": "pnpm run build && pnpm run lint && pnpm run type-check && pnpm run test"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@types/fs-extra": "8.1.0",
    "@types/js-yaml": "^4.0.5",
    "@types/semver": "7.1.0",
    "@types/shelljs": "^0.8.11",
    "@types/yargs": "15.0.4",
    "chalk": "^5.2.0",
    "generate-changelog": "1.8.0",
    "glob": "^8.0.3",
    "js-yaml": "4.1.0",
    "semver": "7.1.3",
    "shelljs": "0.8.1",
    "type-fest": "3.5.1",
    "yargs": "15.1.0"
  },
  "peerDependencies": {
    "@babel/runtime-corejs3": "< 8",
    "core-js": "< 4",
    "lodash": "< 5"
  },
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.20.5",
    "@babel/eslint-parser": "7.19.1",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-export-namespace-from": "7.18.9",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-syntax-import-assertions": "7.20.0",
    "@babel/plugin-transform-runtime": "7.19.6",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@babel/runtime-corejs3": "7.20.7",
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@commitlint/prompt-cli": "17.3.0",
    "@jest/globals": "29.3.1",
    "@repodog/babel-config": "file:../repodog/packages/babel-config",
    "@repodog/commitlint-config": "file:../repodog/packages/commitlint-config",
    "@repodog/eslint-config": "file:../repodog/packages/eslint-config",
    "@repodog/jest-config": "file:../repodog/packages/jest-config",
    "@repodog/markdownlint-config": "file:../repodog/packages/markdownlint-config",
    "@repodog/prettier-config": "file:../repodog/packages/prettier-config",
    "@repodog/rollup-config": "file:../repodog/packages/rollup-config",
    "@repodog/ts-config": "file:../repodog/packages/ts-config",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-image": "3.0.1",
    "@rollup/plugin-json": "5.0.2",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-terser": "0.2.0",
    "@types/jest": "25.1.3",
    "@types/lodash": "4.14.149",
    "@types/node": "13.7.7",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "babel-jest": "29.3.1",
    "babel-plugin-codegen": "4.1.5",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-macros": "3.1.0",
    "concurrently": "5.1.0",
    "core-js": "3.27.1",
    "del-cli": "3.0.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-sort-class-members": "1.16.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "fs-extra": "11.1.0",
    "husky": "4.2.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.3.1",
    "lodash": "4.17.21",
    "markdownlint-cli": "0.32.2",
    "prettier": "2.8.1",
    "rollup": "3.7.0",
    "rollup-plugin-analyzer": "4.0.0",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-sourcemaps": "0.6.3",
    "typescript": "4.9.4"
  }
}
